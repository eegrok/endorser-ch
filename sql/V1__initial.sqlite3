
CREATE TABLE event (
       id INTEGER PRIVATE KEY,
       orgName VARCHAR(120),
       name VARCHAR(250),
       startTime DATETIME
);

CREATE TABLE action_claim (
       id INTEGER PRIVATE KEY,
       jwtRowId BIGINT,
       agentDid CHARACTER(60), -- DID of the acting entity (in subject & claim); did:ethr are 52 chars
       eventRowId BIGINT,
       eventOrgName VARCHAR(120),
       eventName VARCHAR(250),
       eventStartTime DATETIME
);

CREATE TABLE confirmation (
       id INTEGER PRIVATE KEY,
       jwtRowId BIGINT,
       issuer CHARACTER(60), -- DID of the confirming entity; did:ethr are 52 chars
       actionRowId BIGINT,
       origClaim TEXT
);

CREATE TABLE jwt (
       id INTEGER PRIVATE KEY,
       issuedAt DATETIME,
       issuer CHARACTER(60), -- DID of the confirming entity; did:ethr are 52 chars
       subject VARCHAR(100),
       claimContext VARCHAR(30),
       claimType VARCHAR(30),
       claimEncoded TEXT,
       jwtEncoded TEXT
);
