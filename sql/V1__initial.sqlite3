CREATE TABLE attendance (
       did CHARACTER(60), -- DID of the attending entity (in subject & claim); did:ethr are 52 chars
       eventRowId BIGINT,
       claimEncoded TEXT
);

CREATE TABLE confirmation (
       did CHARACTER(60), -- DID of the confirming entity; did:ethr are 52 chars
       attendanceRowId BIGINT,
       origClaimEncoded TEXT
);

CREATE TABLE jwt (
       issuedAt DATETIME,
       subject VARCHAR(100),
       claimContext VARCHAR(30),
       claimType VARCHAR(30),
       claimEncoded TEXT,
       jwtEncoded TEXT
);
